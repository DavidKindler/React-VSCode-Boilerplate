        "noImplicitAny": false,
        "sourceMap": false,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": false,
        "outDir": "src",
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "tsx/**/*"
    ]
}